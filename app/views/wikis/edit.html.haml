.container
  %h1 Edit Wiki
  = render partial: 'form', locals: { wiki: @wiki }
  - if current_user.role == 'premium'
    %h3 Manage Collaborators
    %table.table
      - @users.each do |user|
        %tr
          %td= user.name
          %td
            - if @wiki.collaborators.collect(&:user_id).include?(user.id)
              = link_to "Remove Collaborator", wiki_collaborator_path(@wiki, @wiki.collaborator_for(user)), method: :delete, class: 'btn btn-danger'
            - else
              = link_to "Add Collaborator", wiki_collaborators_path(@wiki, user_id: user.id), method: :post, class: 'btn btn-success'